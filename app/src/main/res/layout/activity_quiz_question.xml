<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".QuizQuestionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/question_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="What is the name of Pakistan \n Prime Minister?"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:layout_marginTop="100dp" />


        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:max="6"
            android:indeterminate="false"
            tools:progress="1"
            android:layout_marginTop="30dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            app:layout_constraintTop_toBottomOf="@id/question_Tv"
            app:layout_constraintLeft_toLeftOf="@id/question_Tv"
            app:layout_constraintRight_toRightOf="@id/question_Tv"/>

        <TextView
            android:id="@+id/Tvprog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1/6"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@id/question_Tv"
            app:layout_constraintLeft_toRightOf="@id/progressbar"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/option_one_TV"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            tools:text="Imran Khan"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:background="@drawable/simpletextview"
            app:layout_constraintTop_toBottomOf="@id/progressbar"
            app:layout_constraintLeft_toLeftOf="@id/progressbar"
            app:layout_constraintRight_toRightOf="@id/progressbar"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/option_two_TV"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            tools:text="Asim Munier"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:background="@drawable/simpletextview"
            app:layout_constraintTop_toBottomOf="@id/option_one_TV"
            app:layout_constraintLeft_toLeftOf="@id/option_one_TV"
            app:layout_constraintRight_toRightOf="@id/option_one_TV"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/option_three_TV"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            tools:text="Zardari"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:background="@drawable/simpletextview"
            app:layout_constraintTop_toBottomOf="@id/option_two_TV"
            app:layout_constraintLeft_toLeftOf="@id/option_two_TV"
            app:layout_constraintRight_toRightOf="@id/option_two_TV"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/option_four_TV"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            tools:text="Shahbaz Sharif"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:background="@drawable/simpletextview"
            app:layout_constraintTop_toBottomOf="@id/option_three_TV"
            app:layout_constraintLeft_toLeftOf="@id/option_three_TV"
            app:layout_constraintRight_toRightOf="@id/option_three_TV"
            android:layout_marginTop="30dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/SubBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#A275E1"
            android:text="Submit"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/option_four_TV"
            app:layout_constraintRight_toRightOf="@id/option_four_TV"
            app:layout_constraintTop_toBottomOf="@id/option_four_TV"
            app:layout_constraintVertical_bias="0.123" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    
    
</ScrollView>